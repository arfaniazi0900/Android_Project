<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">


<RelativeLayout
    android:id="@+id/RR1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="20dp">

    //logo
    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/virtual"
            android:fontFamily="cursive"
            android:textSize="30dp"
            android:drawableRight="@drawable/ic_restaurant_black_24dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/graydark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="CooK"
            android:textColor="@color/pink"
            android:textSize="30dp"

            tools:ignore="HardcodedText" />

    </LinearLayout>
    <ImageView
        android:id="@+id/logo_pic"
        android:layout_below="@id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:tint="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_below="@id/logo_pic"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="WE MAKE HEALTHY TASTE GOOD"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:textSize="33sp"
        android:textStyle="bold"
        android:textColor="@color/graydark"
        />
</RelativeLayout>

//for  usename ,password and buttons
<RelativeLayout
    android:id="@+id/RRL2"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/RR1"
    >


    //for username and password

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        //for username et and tv

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Email"
                android:textAllCaps="true"
                android:textColor="@color/black"

                />

            <EditText
                android:id="@+id/et_login_email"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:hint="Enter your email here.."
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        //for password et and tv

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif"
                android:text="Password"
                android:textAllCaps="true"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"
                android:fontFamily="sans-serif-light"
                android:hint="Enter your password here."
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    //for login button
    <Button
        android:id="@+id/login_button"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_below="@id/LL1"
        android:layout_marginTop="35dp"
        android:text="LOG IN"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg"
        android:textColor="@color/White"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/tv_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as guest"
        android:layout_below="@id/login_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@id/tv_guest"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>



</RelativeLayout>

//for signup and forgetpassword options
<RelativeLayout
    android:id="@+id/RRL3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="create account "
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="forget password ? "
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif"/>

</RelativeLayout>

</RelativeLayout>