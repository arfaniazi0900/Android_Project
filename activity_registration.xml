<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">


    //for logo and text below
    <RelativeLayout
        android:id="@+id/RR1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-8dp">

        //logo

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_splash1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/logo"

                android:fontFamily="cursive"
                android:text="Virtual"
                android:textSize="30dp"
                android:drawableRight="@drawable/ic_restaurant_black_24dp"
                android:drawableTint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_splash2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="CooK"
                android:textColor="@color/pink"
                android:textSize="30dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/please_register_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:fontFamily="sans-serif"
            android:text="PLEASE REGISTER YOURSELF"
            android:textAllCaps="true"
            android:textColor="@color/gray_one"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_splash"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/logo"
            android:layout_marginLeft="-119dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/please_register_tv"
            android:src="@drawable/logo"
            android:tint="@color/colorPrimaryDark" />
    </RelativeLayout>




    //for  name , email ,contact , gender ,password , confirm password and buttons
    <RelativeLayout
        android:id="@+id/RRL2"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RR1"
        >


        //for name and password
        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            //for name et and tv
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"

                    />

                <EditText
                    android:id="@+id/et_reg_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/et_bg"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Enter your name here.."/>
            </LinearLayout>

            //for email et and tv
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Email :"
                    android:textAllCaps="true"
                    android:textColor="@color/black"

                    />

                <EditText
                    android:id="@+id/et_reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/et_bg"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:hint=".@gmail.com"/>
            </LinearLayout>

            //for contact et and tv
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact :"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"

                    />

                <EditText
                    android:id="@+id/et_reg_phone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/et_bg"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="03*********"/>

                <!--<Spinner
                    android:id="@+id/spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="9dp"

                    />-->
            </LinearLayout>

            //for contact et and tv
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"

                    />

                <EditText
                    android:id="@+id/et_reg_address"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/et_bg"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Block , St.no , Sargodha, Pakistan"/>

                <!--<Spinner
                    android:id="@+id/spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="9dp"

                    />-->
            </LinearLayout>




            //for password et and tv
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password :"
                    android:textAllCaps="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/et_reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/et_bg"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Enter your password here."
                    android:inputType="textPassword" />
            </LinearLayout>

            //for confirm password et and tv
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password :"
                    android:textAllCaps="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/et_reg_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/et_bg"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:hint="Re enter your password here."
                    android:inputType="textPassword" />
            </LinearLayout>

        </LinearLayout>

        //for submit button
        <Button
            android:id="@+id/reg_submit_button"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@id/LL1"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"
            android:textAllCaps="false"
            android:background="@drawable/btn_bg"
            android:textColor="@color/White"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_submit_button"
            android:layout_marginLeft="90dp"

            android:text=" now here? account" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_login"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-1dp"
            android:visibility="invisible" />


    </RelativeLayout>

</RelativeLayout>



