<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="165dp"
    android:layout_height="390dp"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    cardView:cardCornerRadius="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_recipe_img_id"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:background="@color/blue"/>

        <TextView
            android:id="@+id/home_recipe_name_id"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Recipe name"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            android:textColor="#2d2d2d"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp">

            <ImageView
                android:layout_marginTop="2.5dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/gradStart"/>
            <ImageView
                android:layout_marginTop="2.5dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/gradStart"/>
            <ImageView
                android:layout_marginTop="2.5dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/gradStart"/>
            <ImageView
                android:layout_marginTop="2.5dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/gradStart"/>
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/star"/>



            <TextView
                android:id="@+id/home_recipe_stars_id"
                android:textAlignment="center"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:textSize="17dp"
                android:text="5"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/lilwhite"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe by"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smye Sareel"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView

                android:layout_marginLeft="9dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_people_black_24dp"
                android:backgroundTint="@color/gradStop"
                android:tint="@color/blue"
                />

            <TextView
                android:id="@+id/tv_home_recipe_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="12"
                />

            <ImageView

                android:layout_marginLeft="9dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_favorite_black_24dp"
                android:backgroundTint="@color/gradStart"
                android:tint="@color/gradStart"
                />

            <TextView
                android:id="@+id/tv_home_recipe_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="12"
                />

            <ImageView
                android:layout_marginLeft="9dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_favorite_black_24dp"
                android:backgroundTint="@color/gradStart"
                android:tint="@color/gradStart"
                />

            <TextView
                android:id="@+id/tv_home_recipe_cooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="12"
                />



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
